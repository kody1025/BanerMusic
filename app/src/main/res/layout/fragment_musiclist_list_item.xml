<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <ImageView
        android:id="@+id/musicList_item_playFlag"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/musicList_item_songTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="7dp"
        android:layout_toRightOf="@+id/musicList_item_playFlag"
        android:layout_toLeftOf="@+id/musicList_item_more"
        android:layout_centerVertical="true"
        android:textColor="@color/gray"/>
    <ImageView
        android:id="@+id/musicList_item_more"
        android:layout_alignParentRight="true"
        android:src="@drawable/music_list_more_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"/>
</RelativeLayout>
